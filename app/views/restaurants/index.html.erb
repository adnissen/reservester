<h1>Listing restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Phone number</th>
      <th>Location</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @restaurants.each do |restaurant| %>
    <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.description %></td>
    <td><%= restaurant.phone_number %></td>
    <td><%= restaurant.location %></td>
    <td><img src="<%= restaurant.image.thumbnail.url %>" alt=""></td>
  </td>
  <td><%= link_to 'Show', restaurant_path(restaurant) %></td>
  <% if current_owner == restaurant.owner %>
    <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
  <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>

</tr>
    <% end %>
</tbody>
</table>

